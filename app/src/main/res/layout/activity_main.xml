<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <ImageView
        android:src="@drawable/ic_launcher_background"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/imagesrc">

    </ImageView>
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="True Random Number Generator"
        android:textSize="30sp"
        android:gravity="center"
        android:id="@+id/textviewbanner"
        android:textColor="#f20"
        android:textStyle="bold"
        />
    <LinearLayout
        android:layout_below="@id/textviewbanner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:inputType="number"
            android:layout_marginLeft="5dp"
            android:id="@+id/edittextmin"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Nhập vào giá trị nhỏ nhất"/>
        <EditText
            android:inputType="number"
            android:layout_marginLeft="5dp"
            android:id="@+id/edittextmax"
            android:layout_marginTop="20dp"
            android:hint="Nhập vào giá trị lớn nhất"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:text="RanDom"
            android:background="@color/colorPrimary"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonRandom"/>

        <TextView
            android:id="@+id/textviewNumber"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="20dp"/>
    </LinearLayout>


</LinearLayout>